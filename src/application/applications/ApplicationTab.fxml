<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TreeTableColumn?>
<?import javafx.scene.control.TreeTableView?>
<?import javafx.scene.layout.AnchorPane?>

<?import javafx.scene.control.TreeItem?>
<AnchorPane fx:id="pane" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.applications.ApplicationTabController">
   <children>

       <Button fx:id="installButton" layoutX="14.0" layoutY="350.0" mnemonicParsing="false" onAction="#handleInstallButtonClicked" prefHeight="28.0" text="Install" />
       <Button fx:id="deleteButton" layoutX="85.0" layoutY="350.0" mnemonicParsing="false" onAction="#handleDeleteButtonClicked" />
       <ListView fx:id="appsOnPCListView" layoutX="14.0" layoutY="384.0" onMouseClicked="#handleAppsOnPCListViewClicked" prefHeight="156.0" prefWidth="150.0" />

       <TextArea fx:id="resultTextArea" editable="false" layoutX="191.0" layoutY="384.0" prefHeight="156.0" prefWidth="590.0" wrapText="true" />

       <Button fx:id="openButton" layoutX="410.0" layoutY="14.0" mnemonicParsing="false" onAction="#handleOpenButtonClicked" prefHeight="28.0" prefWidth="46.0" text="Open" />
       <Button fx:id="uninstallButton" layoutX="521.0" layoutY="14.0" mnemonicParsing="false" onAction="#handleUninstallButtonClicked" prefHeight="28.0" text="Uninstall" />
       <Button fx:id="copyButton" layoutX="597.0" layoutY="14.0" mnemonicParsing="false" onAction="#handleCopyButtonClicked" prefHeight="28.0" text="Copy APK" />
       <Button fx:id="closeButton" layoutX="465.0" layoutY="14.0" mnemonicParsing="false" onAction="#handleCloseButtonClicked" prefHeight="28.0" text="Close" />
       <Button fx:id="showLogCatButton" layoutX="678.0" layoutY="14.0" mnemonicParsing="false" onAction="#handleLogCatButtonClicked" prefHeight="28.0" text="Show LogCat" />
      <Button fx:id="refreshButton" layoutX="315.0" layoutY="14.0" mnemonicParsing="false" onAction="#handleRefreshButtonClicked" prefHeight="28.0" text="Refresh" />

       <SplitPane dividerPositions="0.1919191919191919, 0.5" layoutX="14.0" layoutY="57.0" prefHeight="280.0" prefWidth="769.0">
        <items>
            <ListView fx:id="appsOnDeviceListView" minWidth="0" onMouseClicked="#handleAppsListViewClicked" />

            <SplitPane orientation="VERTICAL" prefHeight="200.0" prefWidth="160.0">
              <items>
                  <TableView fx:id="applicationTableView" prefHeight="300.0" prefWidth="617.0">
                      <placeholder>
                          <Label text="Select an Application to display its details in the table" />
                      </placeholder>
                      <columns>
                          <TableColumn fx:id="APKNameColumn" prefWidth="150.0" text="APK Name" />
                          <TableColumn fx:id="APKPathColumn" prefWidth="175.0" text="APK Path" />
                          <TableColumn fx:id="versionCodeColumn" prefWidth="125.0" text="Version Code" />
                          <TableColumn fx:id="userIdColumn" prefWidth="50.0" text="UserId" />
                          <TableColumn fx:id="dataDirColumn" prefWidth="175.0" text="Data Directory" />
                      </columns>
                  </TableView>

                  <TreeTableView fx:id="intentsTableView" prefHeight="200.0" prefWidth="200.0">
                      <columns>
                          <TreeTableColumn fx:id="componentColumn" prefWidth="175.0" text="Component"/>
                      </columns>
                      <TreeItem fx:id="componentItem"/>
                      <TreeItem fx:id="actionItem"/>
                      <TreeItem fx:id="categoryItem"/>
                      <TreeItem fx:id="mimeTypeItem"/>
                  </TreeTableView>

              </items>
            </SplitPane>
        </items>
      </SplitPane>

   </children>
</AnchorPane>
