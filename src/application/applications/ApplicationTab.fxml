                </SplitPane>
            </items>
        </SplitPane>
        <HBox spacing="20">
           <Button fx:id="installButton" onAction="#handleInstallButtonClicked" prefHeight="28.0" text="Install" />
           <Button fx:id="deleteButton" onAction="#handleDeleteButtonClicked" />
        </HBox>
        <HBox spacing="20">
          <ListView fx:id="appsOnPCListView" minWidth="200" onMouseClicked="#handleAppsOnPCListViewClicked" prefHeight="125" prefWidth="200" />
          <TextArea fx:id="resultTextArea" minHeight="125" prefWidth="2000" />
