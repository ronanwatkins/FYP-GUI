<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TreeItem?>
<?import javafx.scene.control.TreeTableColumn?>
<?import javafx.scene.control.TreeTableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="pane" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.applications.ApplicationTabController">
    <VBox spacing="20" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
        </padding>

        <HBox spacing="20">
            <Button fx:id="refreshButton" onAction="#handleRefreshButtonClicked" prefHeight="28.0" text="Refresh" />
            <Button fx:id="openButton" onAction="#handleOpenButtonClicked" prefHeight="28.0" prefWidth="46.0" text="Open" />
            <Button fx:id="uninstallButton" onAction="#handleUninstallButtonClicked" prefHeight="28.0" text="Uninstall" />
            <Button fx:id="copyButton" onAction="#handleCopyButtonClicked" prefHeight="28.0" text="Copy APK" />
            <Button fx:id="closeButton" onAction="#handleCloseButtonClicked" prefHeight="28.0" text="Close" />
            <Button fx:id="showLogCatButton" onAction="#handleLogCatButtonClicked" prefHeight="28.0" text="Show LogCat" />
        </HBox>
        <SplitPane dividerPositions="0.1919191919191919" layoutX="14.0" layoutY="57.0">
            <items>
                <ListView fx:id="appsOnDeviceListView" onMouseClicked="#handleAppsListViewClicked" />

                <SplitPane dividerPositions="0.5" orientation="VERTICAL" prefHeight="200.0" prefWidth="100.0">
                    <items>
                        <TableView fx:id="applicationTableView" maxHeight="115" prefHeight="115">
                            <placeholder>
                                <Label text="Select an Application to display its details in the table" />
                            </placeholder>
                            <columns>
                                <TableColumn fx:id="APKNameColumn" prefWidth="152.0" text="APK Name" />
                                <TableColumn fx:id="APKPathColumn" prefWidth="192.0" text="APK Path" />
                                <TableColumn fx:id="versionCodeColumn" prefWidth="104.0" text="Version Code" />
                                <TableColumn fx:id="userIdColumn" prefWidth="93.0" text="UserId" />
                                <TableColumn fx:id="dataDirColumn" prefWidth="222.0" text="Data Directory" />
                            </columns>
                        </TableView>

                        <TreeTableView fx:id="intentsTableView" prefHeight="200.0" prefWidth="200.0">
                            <!--<columns>-->
                                <!--<TreeTableColumn fx:id="componentColumn" prefWidth="175.0" text="Component" />-->
                            <!--</columns>-->
                            <!--<TreeItem fx:id="componentItem" />-->
                            <!--<TreeItem fx:id="actionItem" />-->
                            <!--<TreeItem fx:id="categoryItem" />-->
                            <!--<TreeItem fx:id="mimeTypeItem" />-->
                        </TreeTableView>
                    </items>
                </SplitPane>
            </items>
        </SplitPane>
        <HBox spacing="20">
           <Button fx:id="installButton" onAction="#handleInstallButtonClicked" prefHeight="28.0" text="Install" />
           <Button fx:id="deleteButton" onAction="#handleDeleteButtonClicked" />
        </HBox>
        <HBox spacing="20">
          <ListView fx:id="appsOnPCListView" minWidth="200" onMouseClicked="#handleAppsOnPCListViewClicked" prefHeight="200" prefWidth="200" />
          <TextArea fx:id="resultTextArea" prefHeight="200" prefWidth="800" />
          <!--<TextArea fx:id="resultTextArea" editable="false" wrapText="true"  maxWidth="Infinity" />-->
        </HBox>
    </VBox>
</AnchorPane>
