<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="application.commands.CreateBatchTabController"
            prefHeight="600.0" prefWidth="800.0">

            <children>
                <Label layoutX="29.0" layoutY="321.0" prefHeight="17.0" prefWidth="65.0" text="Command:" />
                <TextField fx:id="commandField" layoutX="97.0" layoutY="316.0" prefHeight="28.0" prefWidth="274.0" />

                <ListView fx:id="indexListView" layoutX="410.0" layoutY="57.0" prefHeight="250.0" prefWidth="44.0" />
                <ListView fx:id="commandsListView" layoutX="460.0" layoutY="57.0" prefHeight="250.0" prefWidth="310.0" />
                <ListView fx:id="possibleCommandsListView" layoutX="29.0" layoutY="57.0" prefHeight="250.0" prefWidth="310.0" />

                <Button fx:id="addCommandButton" layoutX="384.0" layoutY="318.0" mnemonicParsing="false" onAction="#handleAddCommandButtonClicked" />
                <Label layoutX="262.0" layoutY="358.0" text="Index:" />
                <ChoiceBox fx:id="indexBox" layoutX="310.0" layoutY="354.0" prefHeight="25.0" prefWidth="58.0" />

                <Button fx:id="moveDownButton" layoutX="623.0" layoutY="318.0" mnemonicParsing="false" onAction="#handleMoveDownButtonClicked" />
                <Button fx:id="moveUpButton" layoutX="676.0" layoutY="318.0" mnemonicParsing="false" onAction="#handleMoveUpButtonClicked" />
                <Button fx:id="deleteButton" layoutX="726.0" layoutY="318.0" mnemonicParsing="false" onAction="#handleDeleteButtonClicked" />
                <Button fx:id="saveButton" layoutX="623.0" layoutY="354.0" mnemonicParsing="false" onAction="#handleSaveButtonClicked" text="Save Batch Commands" />
                <Button fx:id="enterTextButton" layoutX="291.0" layoutY="404.0" mnemonicParsing="false" onAction="#handleEnterTextButtonClicked" text="Enter Text" />
                <Button fx:id="getCursorLocationButton" layoutX="139.0" layoutY="404.0" mnemonicParsing="false" onAction="#handleGetCursorLocationClicked" prefHeight="25.0" prefWidth="123.0" text="Get Cursor Location" />
                <Button fx:id="recordInputsButton" layoutX="172.0" layoutY="447.0" mnemonicParsing="false" onAction="#handleRecordInputsClicked" text="Record Inputs" />
                <ToggleButton fx:id="inputsToggleButton" layoutX="29.0" layoutY="18.0" mnemonicParsing="false" onAction="#handleInputsButtonPressed" prefHeight="25.0" prefWidth="54.0" text="Inputs" />
                <ToggleButton fx:id="applicationsToggleButton" layoutX="94.0" layoutY="18.0" mnemonicParsing="false" onAction="#handleApplicationsButtonPressed" prefHeight="25.0" prefWidth="84.0" text="Applications" />
                <Label fx:id="actionLabel" layoutX="29.0" layoutY="358.0" text="Action:" />
                <ComboBox fx:id="actionComboBox" layoutX="97.0" layoutY="354.0" onAction="#handleActionComboBoxClicked" prefWidth="150.0" />

            </children>
</AnchorPane>
