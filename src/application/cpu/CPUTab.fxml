<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.cpu.CPUTabController">

    <VBox spacing="20" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
        </padding>

        <HBox spacing="20">
            <TextField fx:id="searchField" onKeyReleased="#handleSearchFieldAction" prefWidth="320" promptText="Search" />
            <Button fx:id="startButton" minWidth="50" onMouseClicked="#handleStartButtonClicked" text="Start" />
            <Button fx:id="clearButton" onAction="#handleClearButtonClicked" text="Clear" />
        </HBox>

      <LineChart fx:id="chart">
        <xAxis>
          <NumberAxis side="BOTTOM" />
        </xAxis>
        <yAxis>
          <NumberAxis fx:id="xAxis" side="LEFT" />
        </yAxis>
      </LineChart>

        <!--<ListView fx:id="logCatListView" prefWidth="900" prefHeight="1000"/>-->
        <TextField fx:id="resultField" editable="false" prefWidth="320" />
        <!--<LineChart fx:id="chart" prefWidth="200" prefHeight="200"/>-->
    </VBox>

</AnchorPane>
