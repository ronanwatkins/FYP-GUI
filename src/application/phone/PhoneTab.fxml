<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.phone.PhoneTabController">
   <children>
      <Label layoutX="33.0" layoutY="34.0" text="From" />
      <TextField fx:id="phoneNumberField" layoutX="33.0" layoutY="60.0" prefHeight="25.0" prefWidth="177.0" />
      <Button fx:id="holdCallButton" layoutX="89.0" layoutY="98.0" mnemonicParsing="false" onAction="#handleHoldCallButtonClicked" text="Hold" />
      <Button fx:id="makeCallButton" layoutX="33.0" layoutY="98.0" mnemonicParsing="false" onAction="#handleMakeCallButtonClicked" text="Call" />
      <Button fx:id="endCallButton" layoutX="156.0" layoutY="98.0" mnemonicParsing="false" onAction="#handleEndCallButtonClicked" text="End Call" />

      <Label layoutX="33.0" layoutY="144.0" text="Message" />
      <TextArea fx:id="messageArea" layoutX="33.0" layoutY="172.0" prefHeight="128.0" prefWidth="189.0" />
       <Button fx:id="sendSMSButton" layoutX="33.0" layoutY="318.0" mnemonicParsing="false" onAction="#handleSendSMSButtonClicked" text="SendSMS" />

      <Label layoutX="300.0" layoutY="34.0" text="Network Type" />
      <ComboBox fx:id="networkType" layoutX="300.0" layoutY="60.0" prefWidth="150.0">
          <items>
              <FXCollections fx:factory="observableArrayList">
                  <String fx:value="EDGE" />
                  <String fx:value="GSM" />
                  <String fx:value="GPRS" />
                  <String fx:value="Full" />
                  <String fx:value="HSCSD" />
                  <String fx:value="HSDPA" />
                  <String fx:value="UMTS" />
              </FXCollections>
          </items>
      </ComboBox>

      <Label layoutX="300.0" layoutY="123.0" text="Signal Strength" />
      <ComboBox fx:id="signalStrength" layoutX="300.0" layoutY="149.0" prefWidth="150.0">
          <items>
              <FXCollections fx:factory="observableArrayList">
                  <String fx:value="None" />
                  <String fx:value="Poor" />
                  <String fx:value="Moderate" />
                  <String fx:value="Good" />
                  <String fx:value="Great" />
              </FXCollections>
          </items>
      </ComboBox>

      <Label layoutX="300.0" layoutY="206.0" text="Voice Status" />
      <ComboBox fx:id="voiceStatus" layoutX="300.0" layoutY="236.0" prefWidth="150.0">
          <items>
              <FXCollections fx:factory="observableArrayList">
                  <String fx:value="Home" />
                  <String fx:value="Roaming" />
                  <String fx:value="Searching" />
                  <String fx:value="Denied" />
                  <String fx:value="Unregistered" />
              </FXCollections>
          </items>
      </ComboBox>

      <Label layoutX="300.0" layoutY="292.0" text="Data Status" />
      <ComboBox fx:id="dataStatus" layoutX="300.0" layoutY="318.0" prefWidth="150.0">
          <items>
              <FXCollections fx:factory="observableArrayList">
                  <String fx:value="Home" />
                  <String fx:value="Roaming" />
                  <String fx:value="Searching" />
                  <String fx:value="Denied" />
                  <String fx:value="Unregistered" />
              </FXCollections>
          </items>
      </ComboBox>

       <Label layoutX="518.0" layoutY="34.0" text="Battery Level (%):" />
       <Slider fx:id="batterySlider" layoutX="518.0" layoutY="66.0" />
       <Label fx:id="batteryLabel" layoutX="640.0" layoutY="34.0" text="100" />

       <Label layoutX="518.0" layoutY="123.0" text="Battery Health" />
       <ComboBox fx:id="batteryHealth" layoutX="518.0" layoutY="149.0" prefWidth="150.0">
           <items>
               <FXCollections fx:factory="observableArrayList">
                   <String fx:value="Dead" />
                   <String fx:value="Failure" />
                   <String fx:value="Good" />
                   <String fx:value="Unknown" />
                   <String fx:value="Overheat" />
                   <String fx:value="Overvoltage" />
               </FXCollections>
           </items>
       </ComboBox>

       <Label layoutX="518.0" layoutY="292.0" text="Battery Status" />
       <ComboBox fx:id="batteryStatus" layoutX="518.0" layoutY="318.0" prefWidth="150.0">
           <items>
               <FXCollections fx:factory="observableArrayList">
                   <String fx:value="Unknown" />
                   <String fx:value="Not charging" />
                   <String fx:value="Discharging" />
                   <String fx:value="Charging" />
                   <String fx:value="Full" />
               </FXCollections>
           </items>
       </ComboBox>

       <Label layoutX="518.0" layoutY="206.0" text="Charging" />
       <ComboBox fx:id="charging" layoutX="518.0" layoutY="236.0" prefWidth="150.0">
           <items>
               <FXCollections fx:factory="observableArrayList">
                   <String fx:value="Charging" />
                   <String fx:value="Not charging" />
               </FXCollections>
           </items>
       </ComboBox>

   </children>
</AnchorPane>
