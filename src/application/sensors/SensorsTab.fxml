            <Label fx:id="locationLabel" layoutX="350.0" layoutY="480.0" text="Latitude: 53.27846&#10;Longitude: -9.00983" />

             <AnchorPane fx:id="buttonsPane" layoutX="490.0" layoutY="363.0" prefHeight="200.0" prefWidth="250.0" />

            <Button fx:id="recordButton" layoutX="490.0" layoutY="360.0" mnemonicParsing="false" onAction="#handleRecordButtonClicked" />
            <Button fx:id="stopRecordingButton" layoutX="540.0" layoutY="360.0" mnemonicParsing="false" onAction="#handleStopRecordingButtonPressed" />
            <Button fx:id="loadButton" layoutX="600.0" layoutY="360.0" mnemonicParsing="false" onAction="#handleLoadButtonClicked" text="Load" />

            <Button fx:id="playButton" layoutX="490.0" layoutY="400.0" mnemonicParsing="false" onAction="#handlePlayButtonClicked" />
             <CheckBox fx:id="loopBox" layoutX="540.0" layoutY="404.0" mnemonicParsing="false" text="Loop" />
            <Label fx:id="playbackTitleLabel" layoutX="490.0" layoutY="435.0" text="Playback Speed" />
            <Slider fx:id="playbackSlider" layoutX="485.0" layoutY="460.0" max="100" min="0" />
            <Label fx:id="playbackLabel" layoutX="640.0" layoutY="457.0" text="1" /> <Label fx:id="playbackValueLabel" layoutX="660.0" layoutY="457.0" text="x" />

             <Button fx:id="connectButton" layoutX="490.0" layoutY="490.0" mnemonicParsing="false" onAction="#handleConnectButtonClicked" text="Connect" />
             <CheckBox fx:id="listenBox" layoutX="580.0" layoutY="510.0" mnemonicParsing="false" text="Listen" />

            <ComboBox fx:id="axisComboBox" layoutX="490.0" layoutY="10.0" prefWidth="150.0">
               <items>
                  <FXCollections fx:factory="observableArrayList">
                     <String fx:value="Pitch and Yaw" />
                     <String fx:value="Pitch and Roll" />
                     <String fx:value="Pitch, Yaw and Roll" />
                  </FXCollections>
               </items>
            </ComboBox>

            <Label fx:id="loggerLabel" layoutX="490.0" layoutY="540.0" />

         </children>
      </AnchorPane>
   </children>
</Group>
