<Group xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.sensors.SensorsTabController">
   <children>
      <AnchorPane fx:id="anchorPane" layoutX="11.0" layoutY="8.0" prefHeight="600.0" prefWidth="800.0">
         <children>
            <Label layoutX="45.0" layoutY="38.0" text="Light (lux):" />
            <Slider fx:id="lightSlider" layoutX="45.0" layoutY="65.0" max="40000.0" />
            <Label layoutX="45.0" layoutY="86.0" text="0" />
            <Label fx:id="lightLabel" layoutX="152.0" layoutY="38.0" text="0" />
            <Label layoutX="152.0" layoutY="86.0" text="40000" />
      
            <Label layoutX="45.0" layoutY="144.0" text="Temperature (°C):" />
            <Slider fx:id="temperatureSlider" layoutX="43.0" layoutY="171.0" min="-273.0" />
            <Label layoutX="45.0" layoutY="192.0" text="-273" />
            <Label fx:id="temperatureLabel" layoutX="152.0" layoutY="144.0" text="0" />
            <Label layoutX="152.0" layoutY="192.0" text="100" />

            <Label layoutX="45.0" layoutY="252.0" text="Humidity (%):" />
            <Slider fx:id="humiditySlider" layoutX="43.0" layoutY="279.0" />
            <Label layoutX="45.0" layoutY="300.0" text="0" />
            <Label fx:id="humidityLabel" layoutX="152.0" layoutY="252.0" text="0" />
            <Label layoutX="152.0" layoutY="300.0" text="100" />

            <Label layoutX="45.0" layoutY="360.0" text="Pressure (hPa):" />
            <Slider fx:id="pressureSlider" layoutX="43.0" layoutY="387.0" max="1100.0" />
            <Label layoutX="45.0" layoutY="408.0" text="0" />
            <Label fx:id="pressureLabel" layoutX="152.0" layoutY="360.0" text="0" />
            <Label layoutX="152.0" layoutY="408.0" text="1100" />
      
            <Label layoutX="45.0" layoutY="466.0" text="Proximity (cm):" />
            <Slider fx:id="proximitySlider" layoutX="42.0" layoutY="493.0" />
            <Label layoutX="45.0" layoutY="514.0" text="0" />
            <Label fx:id="proximityLabel" layoutX="152.0" layoutY="466.0" text="0" />
            <Label layoutX="152.0" layoutY="514.0" text="100" />

            <Slider fx:id="yawSlider" layoutX="230.0" layoutY="66.0" max="180.0" min="-180.0" />
            <Label layoutX="230.0" layoutY="38.0" text="Yaw (z):" />
            <Label fx:id="yawLabel" layoutX="340.0" layoutY="38.0" text="0" />

            <Slider fx:id="pitchSlider" layoutX="230.0" layoutY="171.0" max="180.0" min="-180.0" />
            <Label layoutX="230.0" layoutY="144.0" text="Pitch (x):" />
            <Label fx:id="pitchLabel" layoutX="340.0" layoutY="144.0" text="0" />

            <Slider fx:id="rollSlider" layoutX="230.0" layoutY="279.0" max="180.0" min="-180.0" />
            <Label layoutX="230.0" layoutY="252.0" text="Roll (y):" />
            <Label fx:id="rollLabel" layoutX="340.0" layoutY="252.0" text="0" />

            <AnchorPane fx:id="phonePane" layoutX="490.0" layoutY="50.0" prefHeight="250.0" prefWidth="250.0" />
            <Box fx:id="phone" depth="20.0" height="100.0" layoutX="615.0" layoutY="177.0" width="50.0" />

            <RadioButton fx:id="rotateRadioButton" layoutX="530.0" layoutY="310.0" mnemonicParsing="false" text="Rotate" />
            <RadioButton fx:id="moveRadioButton" layoutX="600.0" layoutY="310.0" mnemonicParsing="false" text="Move" />

            <Label layoutX="230.0" layoutY="330.0" text="Magnetic Field    (μT):" />
            <Label fx:id="magneticFieldLabel" layoutX="350.0" layoutY="330.0" />

            <Label layoutX="230.0" layoutY="360.0" text="Gyroscope          (°/s):" />
            <Label fx:id="gyroscopeLabel" layoutX="350.0" layoutY="360.0" />

            <Label layoutX="230.0" layoutY="390.0" text="Accelerometer (m/s²):" />
            <Label fx:id="accelerometerLabel" layoutX="350.0" layoutY="390.0" />

            <Label layoutX="230.0" layoutY="420.0" text="Orientation            (°):" />
            <Label fx:id="orientationLabel" layoutX="350.0" layoutY="420.0" />

            <Label layoutX="230.0" layoutY="450.0" text="Battery                 (%):" />
            <Label fx:id="batteryLabel" layoutX="350.0" layoutY="450.0" text="100" />

